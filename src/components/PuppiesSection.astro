---
// PuppiesSection component
import { puppies } from '../data/puppies';

// Just show the first puppy for review
const displayPuppies = puppies.slice(0, 1);
---

<section class="puppies-section" id="puppies">
  <div class="section-header">
    <span class="section-badge">Available Now</span>
    <h2 class="section-title">Our Available Dachshund Puppies</h2>
    <p class="section-subtitle">Each puppy comes with birth certificate, vet records, and a 1-year health guarantee. All puppies are up to date on vaccinations and de-worming.</p>
  </div>

  <div class="puppies-container">
    <div class="puppy-list">
      {displayPuppies.map((puppy) => (
        <article class="puppy-card">
          <div class="puppy-image">
            <img src={puppy.image} alt={`${puppy.name} - ${puppy.sex} Dachshund puppy`} loading="lazy">
            <span class="status-tag">{puppy.status}</span>
          </div>

          <div class="puppy-info">
            <h3 class="puppy-name">{puppy.name}</h3>
            <div class="puppy-details">
              <div class="detail-row">
                <span class="detail-label">Gender</span>
                <span class="detail-value">{puppy.sex}</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Status</span>
                <span class="detail-value status-available">{puppy.status}</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Age</span>
                <span class="detail-value">{puppy.age}</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Registration</span>
                <span class="detail-value">AKC</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Breed</span>
                <span class="detail-value">Dachshund</span>
              </div>
            </div>
            <div class="puppy-includes">
              <p class="includes-title">Comes with:</p>
              <ul class="includes-list">
                <li>Birth Certificate</li>
                <li>Vet Records</li>
                <li>1 Year Health Guarantee</li>
                <li>Starter Kit</li>
              </ul>
            </div>
          </div>

          <div class="puppy-price-card">
            <div class="price-amount">${puppy.price}</div>
            <p class="price-note">All-inclusive price</p>
            <a href="/contact" class="btn-available">
              Available â€” Inquire Now
              <svg viewBox="0 0 24 24"><path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/></svg>
            </a>
            <div class="price-features">
              <div class="price-feature">
                <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                Health Guaranteed
              </div>
              <div class="price-feature">
                <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                Vaccinated & De-wormed
              </div>
              <div class="price-feature">
                <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                Ready for New Home
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .puppies-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #FDF6EE;
    padding: 3.5rem 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-badge {
    display: inline-block;
    background: #8B4513;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.75rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #666;
    margin: 0 auto;
    max-width: 700px;
    line-height: 1.7;
  }

  .puppies-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .puppy-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .puppy-card {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 0;
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(139, 69, 19, 0.08);
  }

  /* Image column */
  .puppy-image {
    position: relative;
    min-height: 380px;
    background: #f5f5f5;
    overflow: hidden;
  }

  .puppy-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .status-tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: #2E7D32;
    color: white;
    padding: 0.35rem 0.9rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.3px;
  }

  /* Info column */
  .puppy-info {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-right: 1px solid #f0ebe4;
  }

  .puppy-name {
    font-size: 1.6rem;
    font-weight: 700;
    color: #8B4513;
    margin: 0 0 1.25rem;
  }

  .puppy-details {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    margin-bottom: 1.5rem;
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 0.6rem;
    border-bottom: 1px solid #f5f0ea;
  }

  .detail-row:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .detail-label {
    font-size: 0.9rem;
    color: #888;
    font-weight: 500;
  }

  .detail-value {
    font-size: 0.9rem;
    color: #333;
    font-weight: 600;
  }

  .status-available {
    color: #2E7D32;
  }

  .puppy-includes {
    background: #FDF6EE;
    border-radius: 10px;
    padding: 1rem 1.25rem;
  }

  .includes-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #8B4513;
    margin: 0 0 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .includes-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .includes-list li {
    font-size: 0.85rem;
    color: #555;
    padding-left: 1.25rem;
    position: relative;
  }

  .includes-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background: #C8872B;
    border-radius: 50%;
  }

  /* Price column */
  .puppy-price-card {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: #faf8f5;
  }

  .price-amount {
    font-size: 2.5rem;
    font-weight: 700;
    color: #8B4513;
    margin-bottom: 0.25rem;
    line-height: 1;
  }

  .price-note {
    font-size: 0.85rem;
    color: #999;
    margin: 0 0 1.5rem;
  }

  .btn-available {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #8B4513, #D2691E);
    color: white;
    padding: 0.875rem 1.75rem;
    border-radius: 50px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 3px 12px rgba(139, 69, 19, 0.25);
    width: 100%;
    margin-bottom: 1.5rem;
  }

  .btn-available:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(139, 69, 19, 0.35);
    color: white;
  }

  .btn-available svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  .price-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
  }

  .price-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.82rem;
    color: #666;
  }

  .price-feature svg {
    width: 16px;
    height: 16px;
    fill: #2E7D32;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .puppy-image {
      min-height: 320px;
    }

    .puppy-name {
      font-size: 1.4rem;
    }

    .price-amount {
      font-size: 2.25rem;
    }
  }

  @media (max-width: 900px) {
    .puppy-card {
      grid-template-columns: 1fr 1fr;
    }

    .puppy-image {
      grid-column: 1;
      grid-row: 1 / 3;
      min-height: 100%;
    }

    .puppy-info {
      grid-column: 2;
      grid-row: 1;
      border-right: none;
      border-bottom: 1px solid #f0ebe4;
    }

    .puppy-price-card {
      grid-column: 2;
      grid-row: 2;
    }
  }

  @media (max-width: 600px) {
    .puppies-section {
      padding: 2.5rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .puppy-card {
      grid-template-columns: 1fr;
    }

    .puppy-image {
      grid-column: 1;
      grid-row: 1;
      min-height: 280px;
    }

    .puppy-info {
      grid-column: 1;
      grid-row: 2;
      border-bottom: 1px solid #f0ebe4;
      padding: 1.5rem;
    }

    .puppy-price-card {
      grid-column: 1;
      grid-row: 3;
      padding: 1.5rem;
    }
  }
</style>
