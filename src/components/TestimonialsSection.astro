---
// TestimonialsSection component
import { testimonials } from '../data/testimonials';

const testimonialImages = [
  '/images/testi-1.jpeg',
  '/images/testi-2.jpeg',
  '/images/testi-3.jpeg',
  '/images/testi-4.jpeg',
  '/images/testi-5.jpeg',
  '/images/testi-6.jpeg',
  '/images/testi-7.jpeg',
  '/images/testi-8.jpeg',
  '/images/testi-9.jpeg',
  '/images/testi-10.jpeg',
  '/images/testi-11.jpeg',
  '/images/testi-12.jpeg',
  '/images/testi-13.jpeg',
  '/images/testi-14.jpeg',
  '/images/testi-15.jpeg',
  '/images/testi-16.jpeg',
  '/images/testi-17.jpeg',
  '/images/testi-18.jpeg',
  '/images/testi-19.jpeg',
  '/images/testi-20.jpeg',
  '/images/testi-21.jpeg',
  '/images/testi-22.jpeg',
];
---

<section class="testimonials-section" id="testimonials">
  <div class="testimonials-container">
    <div class="section-header">
      <span class="section-badge">Happy Staffie Families</span>
      <h2 class="section-title">What Our Families Say</h2>
      <p class="section-subtitle">Real stories from families who found their perfect companion with us.</p>
    </div>

    <!-- Image Gallery Grid -->
    <div class="image-gallery">
      {testimonialImages.map((img, index) => (
        <div class={`gallery-item gallery-item-${(index % 4) + 1}`}>
          <img src={img} alt="Happy Staffie family" loading="lazy">
        </div>
      ))}
    </div>

    <!-- Testimonials Masonry Grid -->
    <div class="testimonials-masonry">
      {testimonials.map((testimonial, index) => (
        <div class={`testimonial-card card-${(index % 3) + 1}`}>
          <div class="testimonial-header">
            <div class="customer-avatar">
              <img src={testimonial.image} alt={testimonial.puppyName} loading="lazy">
            </div>
            <div class="customer-info">
              <h4 class="customer-name">{testimonial.name}</h4>
              <p class="customer-location">{testimonial.location}</p>
            </div>
            <div class="rating">
              {Array(testimonial.rating).fill(null).map(() => (
                <svg class="star" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
              ))}
            </div>
          </div>
          <p class="testimonial-text">"{testimonial.text}"</p>
          <span class="puppy-tag">
            <svg viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
            Adopted {testimonial.puppyName}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: linear-gradient(135deg, #1B2A4A 0%, #0F1B33 100%);
    padding: 4rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .testimonials-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M30 30c2 0 3.5 1.5 3.5 3.5S32 37 30 37s-3.5-1.5-3.5-3.5S28 30 30 30zm-15 0c2 0 3.5 1.5 3.5 3.5S17 37 15 37s-3.5-1.5-3.5-3.5S13 30 15 30zm30 0c2 0 3.5 1.5 3.5 3.5S47 37 45 37s-3.5-1.5-3.5-3.5S43 30 45 30z'/%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
    backdrop-filter: blur(10px);
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.75rem;
  }

  .section-subtitle {
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 500px;
    margin: 0 auto;
  }

  /* Image Gallery - Masonry Style */
  .image-gallery {
    columns: 4;
    column-gap: 1rem;
    margin-bottom: 3rem;
  }

  .gallery-item {
    break-inside: avoid;
    margin-bottom: 1rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  /* Testimonials Masonry Grid */
  .testimonials-masonry {
    columns: 3;
    column-gap: 1.5rem;
  }

  .testimonial-card {
    break-inside: avoid;
    background: white;
    border-radius: 16px;
    padding: 1.75rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  .testimonial-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .customer-avatar {
    width: 55px;
    height: 55px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #1B2A4A;
    flex-shrink: 0;
  }

  .customer-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .customer-info {
    flex: 1;
    min-width: 0;
  }

  .customer-name {
    font-size: 1rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.2rem;
  }

  .customer-location {
    font-size: 0.8rem;
    color: #666;
    margin: 0;
  }

  .rating {
    display: flex;
    gap: 0.1rem;
    flex-shrink: 0;
  }

  .star {
    width: 16px;
    height: 16px;
    fill: #FFD700;
  }

  .testimonial-text {
    font-size: 0.9rem;
    line-height: 1.7;
    color: #555;
    margin: 0 0 1rem;
    font-style: italic;
  }

  .puppy-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    background: #F0F4F8;
    padding: 0.4rem 0.9rem;
    border-radius: 50px;
    font-size: 0.8rem;
    color: #1B2A4A;
    font-weight: 600;
  }

  .puppy-tag svg {
    width: 14px;
    height: 14px;
    fill: #1B2A4A;
  }

  @media (max-width: 1100px) {
    .image-gallery {
      columns: 3;
    }

    .testimonials-masonry {
      columns: 2;
    }
  }

  @media (max-width: 768px) {
    .image-gallery {
      columns: 2;
    }

    .testimonials-masonry {
      columns: 1;
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 600px) {
    .testimonials-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .image-gallery {
      columns: 2;
      column-gap: 0.75rem;
    }

    .gallery-item {
      margin-bottom: 0.75rem;
    }

    .testimonial-card {
      padding: 1.25rem;
    }
  }
</style>
