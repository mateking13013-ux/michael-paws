---
// TestimonialsPreview component
import { testimonialPreviews } from '../data/testimonials';

const testimonialImages = [
  '/images/testi-1.jpeg',
  '/images/testi-2.jpeg',
  '/images/testi-3.jpeg',
  '/images/testi-4.jpeg',
  '/images/testi-5.jpeg',
  '/images/testi-6.jpeg',
  '/images/testi-7.jpeg',
  '/images/testi-8.jpeg',
  '/images/testi-9.jpeg',
  '/images/testi-10.jpeg',
  '/images/testi-11.jpeg',
  '/images/testi-12.jpeg',
  '/images/testi-13.jpeg',
  '/images/testi-14.jpeg',
  '/images/testi-15.jpeg',
  '/images/testi-16.jpeg',
  '/images/testi-17.jpeg',
  '/images/testi-18.jpeg',
  '/images/testi-19.jpeg',
  '/images/testi-20.jpeg',
  '/images/testi-21.jpeg',
  '/images/testi-22.jpeg',
];

---

<section class="testimonials-section">
  <div class="section-container">
    <div class="section-header">
      <div class="google-reviews-badge">
        <img src="/images/image.png" alt="Google Reviews 5 Stars">
      </div>
      <h2 class="section-title">What Our Families Say</h2>
      <p class="section-subtitle">Read reviews from happy puppy owners</p>
    </div>

    <div class="testimonials-masonry">
      {testimonialPreviews.map((t, index) => (
        <div class="testimonial-card">
          <div class="card-image">
            <img src={testimonialImages[index % testimonialImages.length]} alt={`${t.name}'s Staffie`} loading="lazy">
          </div>
          <div class="card-content">
            <div class="card-header">
              <div class="avatar">
                {t.initials}
                <span class="verified-badge">
                  <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
              </div>
              <div class="reviewer-info">
                <h4>{t.name}</h4>
                <p class="reviewer-label">Reviewer</p>
              </div>
            </div>

            <div class="rating-row">
              <div class="stars">
                {Array(5).fill(null).map(() => (
                  <svg class="star" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                ))}
              </div>
              <span class="rating-text">{t.rating}/5</span>
            </div>

            <p class="review-text">{t.text}</p>

            <p class="review-meta">{t.timeAgo} - {t.location}</p>

            <div class="card-footer">
              <img src="/images/image copy.png" alt="Google" class="google-icon">
              <span class="business-name">Michael Paws</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #f8f9fa;
    padding: 4rem 1.5rem;
  }

  .section-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .google-reviews-badge {
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .google-reviews-badge img {
    height: 80px;
    width: auto;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.5rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #666;
    margin: 0;
  }

  /* Masonry Grid for Testimonials */
  .testimonials-masonry {
    columns: 3;
    column-gap: 1.5rem;
  }

  .testimonial-card {
    break-inside: avoid;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    border: 1px solid #e8e8e8;
    margin-bottom: 1.5rem;
  }

  .card-image {
    width: 100%;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .testimonial-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .avatar {
    position: relative;
    width: 50px;
    height: 50px;
    background: #e0e0e0;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: 700;
    color: #555;
  }

  .verified-badge {
    position: absolute;
    bottom: -2px;
    right: -2px;
    width: 18px;
    height: 18px;
    background: #00a67d;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid white;
  }

  .verified-badge svg {
    width: 10px;
    height: 10px;
    fill: white;
  }

  .reviewer-info h4 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: #2a2a2a;
  }

  .reviewer-label {
    font-size: 0.85rem;
    color: #00a67d;
    margin: 0;
  }

  .rating-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .star {
    width: 24px;
    height: 24px;
    fill: #ffc107;
  }

  .rating-text {
    font-size: 1.1rem;
    color: #666;
    font-weight: 500;
  }

  .review-text {
    background: #f8f9fa;
    border-left: 4px solid #00a67d;
    padding: 1rem;
    margin: 0 0 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #333;
  }

  .review-meta {
    font-size: 0.85rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .card-footer {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }

  .google-icon {
    width: 30px;
    height: 30px;
  }

  .business-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a73e8;
    text-decoration: underline;
  }

  @media (max-width: 1024px) {
    .testimonials-masonry {
      columns: 2;
    }
  }

  @media (max-width: 768px) {
    .testimonials-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .testimonials-masonry {
      columns: 1;
      max-width: 500px;
      margin: 0 auto;
    }

    .google-reviews-badge img {
      height: 60px;
    }
  }
</style>
