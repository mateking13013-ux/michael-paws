<style>
  .puppies-section {
    padding: 40px 20px;
    background: #FDF6EE;
  }

  .puppies-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .puppy-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
  }

  .puppy-gallery {
    position: relative;
    min-height: 380px;
  }

  .main-image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center bottom;
    display: block;
  }

  .puppy-details {
    padding: 20px 25px;
    display: flex;
    flex-direction: column;
  }

  .details-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
  }

  .name-section h2 {
    font-size: 1.5rem;
    color: #333;
    margin: 0 0 3px;
  }

  .subtitle {
    font-size: 0.8rem;
    color: #888;
    margin: 0;
  }

  .status-badge {
    padding: 6px 12px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    border-radius: 4px;
    letter-spacing: 0.5px;
  }

  .status-badge.available {
    background: #8B4513;
    color: #fff;
  }

  .status-badge.reserved {
    background: #E8A94A;
    color: #5C2E0A;
  }

  .price-banner {
    background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
    color: #fff;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .price-amount {
    font-size: 1.5rem;
    font-weight: 800;
    color: #fff;
  }

  .price-text {
    font-size: 0.9rem;
    font-weight: 600;
    opacity: 0.95;
  }

  .stats-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    padding: 12px 0;
    border-top: 1px solid #f0ebe4;
    border-bottom: 1px solid #f0ebe4;
    margin-bottom: 12px;
  }

  .stat-item {
    text-align: center;
  }

  .stat-icon {
    width: 28px;
    height: 28px;
    margin: 0 auto 5px;
    color: #8B4513;
  }

  .stat-icon svg {
    width: 100%;
    height: 100%;
  }

  .stat-value {
    display: block;
    font-weight: 700;
    color: #333;
    font-size: 0.85rem;
    margin-bottom: 1px;
  }

  .stat-label {
    font-size: 0.65rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-row {
    display: flex;
    gap: 20px;
    margin-bottom: 12px;
    flex-wrap: wrap;
  }

  .info-item {
    display: flex;
    gap: 6px;
  }

  .info-label {
    color: #888;
    font-size: 0.8rem;
  }

  .info-value {
    color: #333;
    font-weight: 600;
    font-size: 0.8rem;
  }

  .description {
    font-size: 0.85rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 15px;
    flex-grow: 1;
  }

  .comes-with-card {
    background: #FDF6EE;
    border: 1px solid #D2691E;
    border-radius: 8px;
    padding: 10px 14px;
    margin-bottom: 15px;
  }

  .comes-with-card p {
    margin: 0;
    font-size: 0.85rem;
    color: #5C2E0A;
    line-height: 1.5;
  }

  .buttons-row {
    display: flex;
    gap: 10px;
  }

  .buttons-row .btn {
    flex: 1;
    text-align: center;
    padding: 10px 15px;
    font-size: 0.8rem;
    font-weight: 700;
    border-radius: 5px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
