---
import '../styles/global.css';
import TopBar from '../components/TopBar.astro';
import MainHeader from '../components/MainHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import WhatsAppChat from '../components/WhatsAppChat.astro';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogType?: string;
  ogUrl?: string;
}

const {
  title,
  description = "Michael Paws - Premium Staffordshire Bull Terrier puppies raised with love. Health guaranteed, family raised, and ready to bring joy to your home.",
  keywords = "Staffordshire Bull Terrier puppies, Staffie breeder, Staffie puppies, bull terrier, michael paws",
  ogTitle,
  ogDescription,
  ogType = "website",
  ogUrl
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>
  <meta name="author" content="Michael Paws">

  <!-- Google tag (gtag.js) -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-8649N47RC6"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-8649N47RC6');
  </script>

  <!-- Google Tag Manager -->
  <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-M8Q7TR3V');</script>
  <!-- End Google Tag Manager -->

  <!-- Open Graph / Social Media -->
  <meta property="og:title" content={ogTitle || title}>
  <meta property="og:description" content={ogDescription || description}>
  <meta property="og:type" content={ogType}>
  {ogUrl && <meta property="og:url" content={ogUrl}>}

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üê∂</text></svg>">

  <title>{title}</title>
</head>
<body>
  <TopBar />
  <MainHeader />

  <main>
    <slot />
  </main>

  <SiteFooter />
  <!-- <WhatsAppChat /> -->
</body>
</html>
